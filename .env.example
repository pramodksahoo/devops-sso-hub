# Frontend Environment Variables
# Copy this file to .env.local and customize for your environment

# =================================
# Core Application URLs
# =================================

# Frontend application URL (where users access the UI)
VITE_FRONTEND_URL=http://localhost:3000

# Auth BFF service URL (handles authentication)
VITE_AUTH_BFF_URL=http://localhost:3002

# API base URL (typically same as Auth BFF)
VITE_API_BASE_URL=http://localhost:3002/api

# WebSocket URL (for real-time updates)
VITE_WS_URL=ws://localhost:3002

# =================================
# Microservice URLs (Advanced/Admin)
# =================================

# User management service
VITE_USER_SERVICE_URL=http://localhost:3003

# Tools health monitoring service  
VITE_TOOLS_SERVICE_URL=http://localhost:3004

# Admin configuration service
VITE_ADMIN_CONFIG_URL=http://localhost:3005

# Tool catalog and launch service
VITE_CATALOG_URL=http://localhost:3006

# Webhook ingress service
VITE_WEBHOOK_INGRESS_URL=http://localhost:3007

# Audit logging service
VITE_AUDIT_URL=http://localhost:3009

# Analytics and reporting service
VITE_ANALYTICS_URL=http://localhost:3010

# Resource provisioning service
VITE_PROVISIONING_URL=http://localhost:3011

# LDAP synchronization service
VITE_LDAP_SYNC_URL=http://localhost:3012

# Policy management service
VITE_POLICY_URL=http://localhost:3013

# Notification service
VITE_NOTIFIER_URL=http://localhost:3014

# =================================
# External Tool URLs
# =================================

# Keycloak identity provider
VITE_KEYCLOAK_URL=http://localhost:8080

# Grafana monitoring dashboard
VITE_GRAFANA_URL=http://localhost:3100

# Prometheus metrics collection
VITE_PROMETHEUS_URL=http://localhost:9090

# =================================
# Application Configuration
# =================================

# Application title (shown in browser title bar)
VITE_APP_TITLE=SSO Hub

# Node environment (development, production, test)
VITE_NODE_ENV=development

# Enable debug logging and development tools
VITE_DEBUG_MODE=false

# Use mock API responses (for testing without backend)
VITE_MOCK_API=false

# =================================
# Feature Flags
# =================================

# Enable analytics dashboard and collection
VITE_ENABLE_ANALYTICS=true

# Enable audit logging and compliance features
VITE_ENABLE_AUDIT=true

# Enable resource provisioning features
VITE_ENABLE_PROVISIONING=true

# Enable LDAP synchronization features
VITE_ENABLE_LDAP_SYNC=true

# Enable webhook management features
VITE_ENABLE_WEBHOOKS=true

# =================================
# External Deployment Configuration
# =================================
# For production deployments, update URLs to match your domain:

# Example for external IP deployment:
# VITE_FRONTEND_URL=http://10.0.1.100:3000
# VITE_AUTH_BFF_URL=http://10.0.1.100:3002
# VITE_API_BASE_URL=http://10.0.1.100:3002/api
# VITE_WS_URL=ws://10.0.1.100:3002

# Example for domain-based deployment:
# VITE_FRONTEND_URL=https://sso-hub.company.com
# VITE_AUTH_BFF_URL=https://api.sso-hub.company.com
# VITE_API_BASE_URL=https://api.sso-hub.company.com/api  
# VITE_WS_URL=wss://api.sso-hub.company.com